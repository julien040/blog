---
type Props = {
  link: string;
  title: string;
  description: string;
  icon?: string;
};

const { link, title, description, icon } = Astro.props;

import { Icon } from "astro-icon/components";
---

<a
  href={link}
  class="p-5 items-center justify-between flex rounded-xl bg-white/10 w-full mt-2"
>
  <div class="flex items-center">
    {icon && <Icon name={icon} class="text-2xl mr-4" />}
    <div>
      <h3 class="text-lg">{title}</h3>
      <p class="text-white/60 text-sm">{description}</p>
    </div>
  </div>
  <div class="text-xl">
    {">"}
  </div>
</a>
