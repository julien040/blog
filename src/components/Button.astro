---
export interface Props {
  href?: string;
}

const { href, style } = Astro.props;
---

<a href={href}>
  <button class="py-2 px-4 text-black font-semibold text-sm rounded my-2">
    <slot />
  </button>
</a>
<style>
  button {
    background-color: #00ffc5;
    transition: background-color 0.2s ease;
  }
  button:hover {
    background-color: #00d6a4;
  }
</style>
